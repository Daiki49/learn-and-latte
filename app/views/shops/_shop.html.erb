<div class="sm:w-full lg:w-full mb-3">
  <div id="shop-id-<%= shop.id %>" class="p-3">
    <div class="bg-white rounded shadow">
      <div class="flex items-center">
        <ul class="list-none mt-2">
          <li class="flex items-center space-x-2"><%= link_to "店名 : #{shop.name}", shop_path(shop) %></li>
          <li class="flex items-center space-x-2"><%= shop.address %></li>
          <% if user_signed_in? %>
            <li><%= render 'bookmark_buttons', { shop: shop } %></li>
          <% else %>
            <%# ログインすると使える機能案内ダイアログ %>
            <li onclick="document.getElementById('login_modal').showModal(); document.getElementById('login-button').focus();" style="cursor: pointer;">
              <i class="fa-regular fa-bookmark"></i>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<%# ログインすると使える機能案内ダイアログ %>
<dialog id="login_modal" class="modal">
    <div class="modal-box">
        <h3 class="text-lg font-bold">
            ログインして続ける
        </h3>
        <p class="py-4">
            <ul>
              <li>ログインすると使える機能</li>
              <li>・レビュー投稿機能</li>
              <li>・お店ブックマーク機能</li>
              <li>・レビューいいね機能</li>
            </ul>
        </p>
        <div class="modal-action">
            <%# 戻るボタン %>
            <%= form_with url: '#', method: :dialog do %>
                <%= button_tag '✕', class: 'btn btn-sm btn-circle btn-ghost absolute right-2 top-2' %>
            <% end %>
            <%# ログインボタン %>
            <%= link_to 'ログイン', new_user_session_path, class: "btn btn-primary bg-blue-500 text-white rounded-md" %>
        </div>
    </div>
</dialog>
