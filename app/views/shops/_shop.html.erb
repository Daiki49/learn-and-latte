<div class="sm:w-full lg:w-full mb-3">
  <div id="shop-id-<%= shop.id %>" class="p-3">
    <div class="bg-white rounded shadow">
      <div class="flex items-center">
        <ul class="list-none mt-2">
          <li class="flex items-center space-x-2"><%= link_to "店名 : #{shop.name}", shop_path(shop) %></li>
          <li class="flex items-center space-x-2"><%= shop.address %></li>
          <li><%= render 'bookmark_buttons', { shop: shop } %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
