<div>
  <div class="container pt-3 lg:mx-auto">
    <div class="flex flex-wrap justify-center">
      <div class="sm:w-full lg:w-1/3 p-3">
        <!-- 検索フォーム -->
        <%= render 'search_form', q: @q, url: shops_path %>
      </div>
    </div>
    <div class="w-full">
      <!-- 検索結果 -->
      <div class="text-2xl font-bold p-3">検索結果</div>
    </div>
    <div class="flex flex-wrap lg:w-1/3">
      <% if @shops.present? %>
        <%= "検索結果:#{@shops.size}件です。" %>
        <%= render @shops %>
      <% else %>
        <div class="mb-3">検索結果:0件です。</div>
      <% end %>
    </div>
  </div>
</div>
