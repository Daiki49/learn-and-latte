<header>
  <nav class="flex items-center justify-between bg-gray-200 h-16">
    <%= link_to '/', class: 'ml-5 text-2xl font-bold text-gray-700' do %>
      Learn&Latte
    <% end %>
    <div class="flex items-center">
      <ul class="flex items-center space-x-5 mr-5">
        <% if user_signed_in? %>
          <div class="flex-none">
            <ul class="menu menu-horizontal flex items-center text-black">
              <li>
                <details class="relative">
                  <summary>メニュー</summary>
                  <ul class="bg-my_white px-1 py-2 rounded-md top-7 right-1 leading-normal w-48 z-50">
                    <li><%= link_to t('header.mypage'), users_path %></li>
                    <li><%= link_to t('header.bookmark_index'), bookmarks_shops_path %></li>
                    <li><%= link_to t('header.logout'), destroy_user_session_path, data: { turbo_method: :delete } %></li>
                  </ul>
                </details>
              </li>
            </ul>
          </div>
        <% else %>
          <li>
            <%= link_to t('header.create_account'), new_user_registration_path %>
          </li>
          <li>
            <%= link_to t('header.login'), new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
