<%
=begin %><h2>Edit <%= resource_name.to_s.humanize %></h2>
<%
=end %>
<div class="m-6 text-center">
  <h2><%= t('devise.registrations.edit.title', resource: 'プロフィール') %></h2>
</div>
<div class="flex justify-center text-black">
  <div class="flex flex-col  w-full max-w-md bg-my_white p-8 rounded-lg shadow-lg mb-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field mb-3">
        <%= f.label :name %>
        <%= f.text_field :name, class: "w-full rounded-md border border-gray-300 py-2 px-3 placeholder:text-gray-300 focus:border-gray-500 focus:outline-none focus:ring focus:ring-gray-200" %>
      </div>
      <div class="field mb-3">
        <%= f.label :email %>
        <%= f.text_field :email, class: "w-full rounded-md border border-gray-300 py-2 px-3 placeholder:text-gray-300 focus:border-gray-500 focus:outline-none focus:ring focus:ring-gray-200" %>
      </div>
      <div class="actions">
        <%= f.submit t('devise.registrations.edit.update') , class: "inline-flex w-full items-center justify-center rounded-md hover:bg-custom-hover-brown p-3 mt-6 mb-3 text-white duration-100 ease-in-out  bg-custom-brown hover:bg-custom-hover-brown focus:outline-none cursor-pointer" %>
      </div>
<% end %>

    <%= link_to "戻る", :back, class: "inline-flex w-full items-center justify-center rounded-md bg-gray-300 p-3 duration-100 ease-in-out hover:bg-gray-400 focus:outline-none cursor-pointer" %>

  </div>
</div>
