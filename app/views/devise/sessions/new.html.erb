
<div class="m-6 text-center">
  <h2><%= t('devise.sessions.new.sign_in') %></h2>
</div>

<div class='flex flex-wrap justify-center mb-6'>
  <div class="w-full md:w-1/4 p-4 border border-gray-300 rounded-md">

    <%= button_to user_google_oauth2_omniauth_authorize_path, class: "flex items-center justify-center w-full bg-white rounded-md px-4 py-2 hover:bg-gray-100 border border-gray-300", method: :post, data: { turbo: false } do %>
      <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <g transform="matrix(1, 0, 0, 1, 27.009001, -39.238998)">
          <path fill="#4285F4" d="M -3.264 51.509 C -3.264 50.719 -3.334 49.969 -3.454 49.239 L -14.754 49.239 L -14.754 53.749 L -8.284 53.749 C -8.574 55.229 -9.424 56.479 -10.684 57.329 L -10.684 60.329 L -6.824 60.329 C -4.564 58.239 -3.264 55.159 -3.264 51.509 Z"/>
          <path fill="#34A853" d="M -14.754 63.239 C -11.514 63.239 -8.804 62.159 -6.824 60.329 L -10.684 57.329 C -11.764 58.049 -13.134 58.489 -14.754 58.489 C -17.884 58.489 -20.534 56.379 -21.484 53.529 L -25.464 53.529 L -25.464 56.619 C -23.494 60.539 -19.444 63.239 -14.754 63.239 Z"/>
          <path fill="#FBBC05" d="M -21.484 53.529 C -21.734 52.809 -21.864 52.039 -21.864 51.239 C -21.864 50.439 -21.724 49.669 -21.484 48.949 L -21.484 45.859 L -25.464 45.859 C -26.284 47.479 -26.754 49.299 -26.754 51.239 C -26.754 53.179 -26.284 54.999 -25.464 56.619 L -21.484 53.529 Z"/>
          <path fill="#EA4335" d="M -14.754 43.989 C -12.984 43.989 -11.404 44.599 -10.154 45.789 L -6.734 42.369 C -8.804 40.429 -11.514 39.239 -14.754 39.239 C -19.444 39.239 -23.494 41.939 -25.464 45.859 L -21.484 48.949 C -20.534 46.099 -17.884 43.989 -14.754 43.989 Z"/>
      </g>
      </svg>
      Googleでログイン
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <% end %>

    <div class="flex items-center m-4">
      <div class="flex-grow h-px bg-gray-300"></div>
      <span class="flex-shrink-0 text-gray-500 px-4">または</span>
      <div class="flex-grow h-px bg-gray-300"></div>
    </div>

    <div class="text-center mb-4">メールアドレスでログイン</div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-3">
        <%= f.label :email%>
        <%= f.email_field :email, autofocus: true, class: "w-full rounded-md border border-gray-300 py-2 px-3 placeholder:text-gray-300 focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-100" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, class: "w-full rounded-md border border-gray-300 py-2 px-3 placeholder:text-gray-300 focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-100"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field  mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t('devise.sessions.new.sign_in') , class: "inline-flex w-full items-center justify-center rounded-md bg-blue-500 p-3 text-white duration-100 ease-in-out hover:bg-blue-600 focus:outline-none cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

<div class="m-6 text-center">
  <%= link_to 'Forgot your password?', new_user_password_path %>
</div>

