<div class="container pt-3 lg:mx-auto">
  <div class="flex flex-wrap justify-center">
    <div class="w-1/2">
      <!-- 検索フォーム -->
      <form>
        <div class="flex items-center mb-3">
          <input class="form-input flex-grow border h-12" placeholder="検索ワード" type="search"/>
          <input type="submit" value="検索" class="btn btn-primary ml-2"/>
        </div>
      </form>
    </div>
  </div>
  <!-- レビュー投稿一覧 -->
  <div class="text-2xl font-bold p-3">検索結果</div>
  <div class="flex flex-wrap">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <div class="mb-3">投稿がありません</div>
        <% end %>
  </div>
</div>
