<div class="container pt-3 lg:mx-auto">
  <div class="flex flex-wrap justify-center">
    <div class="sm:w-full lg:w-1/3 p-3">
      <!-- 検索フォーム -->
      <%= render 'search_form', q: @q, url: posts_path %>
    </div>
  </div>
  <div class="w-full">
    <!-- レビュー投稿一覧 -->
    <div class="text-2xl font-bold p-3">検索結果</div>
  </div>
  <div class="flex flex-wrap lg:w-1/3">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <div class="mb-3">投稿がありません</div>
        <% end %>
  </div>
</div>
